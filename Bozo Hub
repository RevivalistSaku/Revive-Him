import random  
import time

# Define core abilities and their probabilities  
abilities = {
    "Commons": [
        "Light Control", "Dark Control", "Teleportation",
        "Electric", "Solid Breaker"
    ],
    "Uncommon": [
        "Touch of Midas", "Plasma Annihilator", "Cell Destroyer"
    ],
    "Rare": [
        "World Breaker", "Phantom King", "Devour", 
        "Chosen Emperor", "Hope"
    ],
    "Legendary": [
        "Reality Maker", "Key of Time", "End of Everything", "Code Unknown"
    ],
    "Mythical": [
        "Hypergod"
    ]
}

# Define probabilities  
probabilities = {
    "Commons": 0.6,
    "Uncommon": 0.2,
    "Rare": 0.05,
    "Legendary": 0.01,
    "Mythical": 0.001  
}

# Function to choose a core ability based on defined probabilities  
def choose_ability():
    rand = random.random()
    cumulative_probability = 0.0  
    for category, prob in probabilities.items():
        cumulative_probability += prob  
        if rand < cumulative_probability:
            return random.choice(abilities[category])

# Function to simulate typing effect  
def slow_type(text, delay=0.05):
    for char in text:
        print(char, end='', flush=True)
        time.sleep(delay)
    print()  # New line after typing

if __name__ == "__main__":
    core_ability = choose_ability()
    level = 1  # Starting level  
    message_ability = f"Your core ability is: {core_ability}"
    message_level = f"Your level is: {level}"
    
    slow_type(message_ability)
    slow_type(message_level)
